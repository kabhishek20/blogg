<!DOCTYPE html>
<html lang="en">
  <head>
   <%- include('./partials/head.ejs') %>
   <title>Blogify App</title>
  </head>
  <body class="temp">
    <%- include('./partials/navbar.ejs') %>

    <div class="container">
      <form action="/blog/addblog" method="post" class="w-50 m-auto mt-5" enctype="multipart/form-data">

        <div class="mb-3">
          <label for="image" class="form-label" style="font-weight: 700;font-size: 18px;">Choose an image</label>
          <input class="form-control" type="file" id="image" accept="image/*" name="coverImageURL">
        </div>
        <div>
          <label for="title" class="form-label" style="font-weight: 700;font-size: 18px;">Title</label>
          <input type="text" class="form-control" id="title" name="title"/>
        </div>

        <div>
          <label for="content" class="form-label" style="font-weight: 700;font-size: 18px;">Content</label>
          <textarea type="textarea" class="form-control" id="content" name="content" style="height: 100px"></textarea>
        </div>
        
       
        <button type="submit" class="btn btn-primary mt-3 bg-dark" style="font-size: 16px;">Submit</button>
      </form>
    </div>

    <%- include('./partials/script.ejs') %>
  </body>
</html>
